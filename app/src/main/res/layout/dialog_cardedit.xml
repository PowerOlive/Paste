<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="360dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="top"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/copyPrimary"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/card_edit_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:foreground="?android:attr/actionBarItemBackground"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@color/colorWhite"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:gravity="end">

            <ImageView
                    android:id="@+id/card_edit_add"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_black_24dp"
                    android:tint="@color/colorWhite"
                    android:visibility="gone"/>

            <ImageView
                    android:id="@+id/card_edit_undo"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/actionBarItemBackground"
                android:padding="8dp"
                    android:src="@drawable/ic_undo_black_24dp"
                    android:tint="@color/colorWhite"/>

            <ImageView
                    android:id="@+id/card_edit_redo"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/actionBarItemBackground"
                android:padding="8dp"
                    android:src="@drawable/ic_redo_black_24dp"
                    android:tint="@color/colorWhite"/>
            <ImageView
                    android:id="@+id/card_edit_check"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/actionBarItemBackground"
                android:padding="8dp"
                    android:src="@drawable/ic_check_black_24dp"
                    android:tint="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorNotThatWhite">
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
            >
                <ImageView
                        android:id="@+id/dialog_edit_insert_http"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_http_black_24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                />
                <ImageView
                        android:id="@+id/dialog_edit_insert_magnet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_cloud_download_black_24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <soptqs.paste.views.ElasticScrollView
            android:id="@+id/edit_scollView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fastScrollEnabled="true"
            android:fillViewport="true">

        <soptqs.paste.views.CustomEditView
                android:id="@+id/card_edit_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:gravity="top"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:lineSpacingExtra="6dp"
                android:textSize="16sp"
                android:text=" "
                android:fadingEdge="vertical"
                android:scrollbars="vertical"/>
    </soptqs.paste.views.ElasticScrollView>

</LinearLayout>