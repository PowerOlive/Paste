<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="40dp"
              android:orientation="horizontal">
    <ImageView
            android:id="@+id/menu_edit"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:foreground="?android:attr/actionBarItemBackground"
            android:tint="@color/popupMenuItemColor"
            android:src="@drawable/ic_mode_edit_black_24dp"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:lottie_scale="2"
            app:lottie_cacheStrategy="strong"
            app:lottie_fileName="collect_icon.json"
            android:foreground="?android:attr/actionBarItemBackground"
    />

    <ImageView android:id="@+id/menu_read"
               android:layout_width="0dp" android:layout_height="match_parent"
               android:layout_weight="1"
               android:padding="8dp"
               android:foreground="?android:attr/actionBarItemBackground"
               android:tint="@color/popupMenuItemColor"
               android:src="@drawable/ic_chrome_reader_mode_black_24dp"/>

</LinearLayout>